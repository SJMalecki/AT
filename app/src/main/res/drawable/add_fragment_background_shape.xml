<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/doggy_green"/>
    <item>
        <bitmap android:src="@drawable/doglandscape" android:gravity="top" android:alpha="0.3"/>
    </item>
    <item android:top="300dp"
          android:bottom="-300dp"
          android:left="0dp"
          android:right="-300dp">
        <rotate
                android:fromDegrees="-10"
                android:pivotX="0%"
                android:pivotY="100%">
            <shape
                    android:shape="rectangle">
                <solid
                        android:color="@color/doggy_orange"/>
            </shape>
        </rotate>
    </item>
</layer-list>