<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/doggy_green"/>
    <item
        android:bottom="-200dp"
        android:left="0dp"
        android:right="-300dp"
        android:top="300dp">

        <rotate
            android:fromDegrees="-15"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/doggy_orange" />
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap android:src="@drawable/dogowner" android:gravity="center|fill" android:alpha="0.3"/>
    </item>

</layer-list>
