<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="user"
                type="pl.sjmprofil.animaltinder.models.User"
        />

        <variable
                name="advert"
                type="pl.sjmprofil.animaltinder.models.Advert"
        />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.userprofile.UserProfileFragment">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_user_profile_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/drawer_test_picture"/>
    </RelativeLayout>
</layout>