<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/navigation_drawer_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navigation_drawer_relative_layout_margin_bottom"
        android:gravity="center">


        <ImageView
            android:id="@+id/followers_card_view_image_view"
            android:layout_width="@dimen/followers_card_view_image_view_size"
            android:layout_height="@dimen/followers_card_view_image_view_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/followers_card_view_image_view_margin_start"
            android:layout_marginTop="@dimen/followers_card_view_image_view_margin_top"
            android:layout_marginBottom="@dimen/followers_card_view_image_view_margin_bottom"
            android:src="@drawable/ic_dog_paw" />

        <TextView
            android:id="@+id/navigation_drawer_logo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followers_card_view_image_view"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/doggy_gray"
            android:textSize="@dimen/navigation_drawer_logo_text_view_text_size" />

    </RelativeLayout>
</layout>
