<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_navigation_drawer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nav_drawer_header_picture_description"
            android:src="@drawable/drawer_tinda_pic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/followers_card_view_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/adorable_dog_icon"/>

    </RelativeLayout>
</layout>

